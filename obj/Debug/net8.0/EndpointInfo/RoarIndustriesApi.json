{
  "openapi": "3.0.1",
  "info": {
    "title": "RoarIndustriesApi",
    "version": "1.0"
  },
  "paths": {
    "/api/Contact/submit": {
      "post": {
        "tags": [
          "Contact"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ContactFormDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/ContactFormDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/ContactFormDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ContactFormDto": {
        "required": [
          "email",
          "fullName",
          "message",
          "serviceInterest"
        ],
        "type": "object",
        "properties": {
          "fullName": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "company": {
            "type": "string",
            "nullable": true
          },
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "phoneNumber": {
            "type": "string",
            "nullable": true
          },
          "serviceInterest": {
            "minLength": 1,
            "type": "string"
          },
          "message": {
            "maxLength": 2000,
            "minLength": 10,
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  }
}